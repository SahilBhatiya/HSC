@model HSC.Models.Vehicle

@{
    ViewData["Title"] = "Remove - " + Model.Number;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1 class="Page-Heading">@ViewData["Title"]</h1>

<div>
    <a asp-action="Index" class="back-btn"><i class='bx bx-arrow-back'></i> Back to List</a>
</div>

<h5 class="fw-bold mb-4">Are you sure you want to delete this?</h5>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kmPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kmPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.owner)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.owner)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
